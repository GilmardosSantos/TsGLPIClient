{
    "compileOnSave": true,
    "compilerOptions": {
        "allowSyntheticDefaultImports": false,
        "baseUrl": "./",
        "outDir": "/lib",
        "sourceMap": true,
        "declaration": true,
        "downlevelIteration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "ESNext", 
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "ES2020",
        "skipLibCheck": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "ES2018",
        ],
        "paths": {
            "@config/*": ["./src/config/*"],
            "@interfaces/*": ["./src/interfaces/*"],
            "@handlers/*": ["./src/handlers/*"],
            "@services/*": ["./src/services/*"],
            "@utils/*": ["./src/utils/*"],
          },  
    }
}