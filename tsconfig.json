{
    "compilerOptions": {
      "target": "ES2022",
      "module": "commonjs",
      "sourceMap": true,
      "outDir": "./lib",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "declaration": true,
      "paths": {
        "@controllers/*": ["./src/controllers/*"],
        "@config/*": ["./src/config/*"],
        "@enum/*": ["./src/enum/*"],
        "@handlers/*": ["./src/handlers/*"],
        "@models/*": ["./src/models/*"],
      }
    },
    "include": ["src/**/*.ts"],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
  }