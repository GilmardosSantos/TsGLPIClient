{
    "compilerOptions": {
      "target": "ES2022",
      "module": "commonjs",
      "sourceMap": true,
      "outDir": "./lib",
      "rootDir": "./",
      "moduleResolution": "node",
      "baseUrl": ".",
      "resolveJsonModule": true,
      "paths": {
        "@controllers/*": ["src/controllers/*"],
        "@config/*": ["src/config/*"],
        "@enum/*": ["src/enum/*"],
        "@handlers/*": ["src/handlers/*"],
        "@models/*": ["src/models/*"],
      },
      "strict": true,
      "esModuleInterop": true,
      "declaration": true,
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
  }