{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "lib",                                   
    "target": "ES2015",                                  
    "declaration": true,        
    "inlineSources": true,
    "declarationMap": false,
    "types": ["node"],
    "lib": ["ES2018"],
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true            
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ]
}
